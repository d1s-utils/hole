<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="0" author="d1snin (me@d1s.dev)">
        <createSequence incrementBy="1" sequenceName="system-uuid" startValue="1"/>

        <createTable tableName="storage_object">
            <column name="id" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_storage_object"/>
            </column>
            <column name="creation_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="object_group" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="encrypted" type="bool">
                <constraints nullable="false"/>
            </column>
            <column name="digest" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="storage_object_access">
            <column name="id" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_storage_object_access"/>
            </column>
            <column name="time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="storage_object_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="metadata_property">
            <column name="id" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_metadata_property"/>
            </column>
            <column name="creation_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="property" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="storage_object_metadata">
            <column name="storage_object_id" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true"
                             primaryKeyName="pk_storage_object_metadata_storage_object"/>
            </column>
            <column name="metadata_property_id" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_storage_object_metadata_metadata"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="storage_object_access" baseColumnNames="storage_object_id"
                                 constraintName="fr_storage_object_access_on_storage_object"
                                 referencedTableName="storage_object"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="storage_object_metadata" baseColumnNames="storage_object_id"
                                 constraintName="fr_storage_object_metadata_on_storage_object"
                                 referencedTableName="storage_object"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="storage_object_metadata" baseColumnNames="metadata_property_id"
                                 constraintName="fr_storage_object_metadata_on_metadata_property"
                                 referencedTableName="metadata_property"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>